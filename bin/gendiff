#!/usr/bin/env php
<?php

require_once __DIR__ . '/../vendor/autoload.php';

use Docopt\Handler;
use function Php\Package\showParserResult;

$doc = <<<DOC
Generate diff

Usage:
  gendiff (-h|--help)
  gendiff (-v|--version)
  gendiff [--format <fmt>] <firstFile> <secondFile>

Options:
  -h --help                     Show this screen
  -v --version                  Show version
  --format <fmt>                Report format [default: stylish]
DOC;

$handler = new Handler();
$response = $handler->handle($doc);


// Если пользователь запросил help или version
if ($response['--help'] || $response['--version']) {
    echo $doc;
    exit;
}
// Если пользователь не указал оба файла
if (!empty($response['<firstFile>']) && !empty($response['<secondFile>'])) {
    showParserResult($response['<firstFile>']);
    showParserResult($response['<secondFile>']);
} else {
    echo "Please provide two file paths.\n";
}